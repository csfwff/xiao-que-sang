<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/grayBg"
    android:layout_height="match_parent"
    tools:context=".ui.NameActivity">
    <com.xiamo.xiaoquesang.common.widget.TitleBar
        android:layout_width="match_parent"
        app:backImg="@mipmap/back"
        app:title="@string/title_nickname"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/info_nickname_change"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:hint="@string/info_nickname_change"
            android:textSize="13sp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="50dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:src="@mipmap/text_close"/>



    </LinearLayout>

</LinearLayout>